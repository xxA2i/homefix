<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Заголовок 1 (крупный, жирный) -->
    <style name="TextAppearance.Homefix.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- Заголовок 2 (средний, жирный) -->
    <style name="TextAppearance.Homefix.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- Основной текст -->
    <style name="TextAppearance.Homefix.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- Вторичный текст (меньший) -->
    <style name="TextAppearance.Homefix.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <!-- Текст для кнопок -->
    <style name="TextAppearance.Homefix.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Анимации зума -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>